{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@utils/*": [
        "./src/utils/*"
      ],
      "@config/*": [
        "./config/*"
      ]
    },
    "esModuleInterop" : true,
    "incremental": true,
  },
  "exclude": ["node_modules", "dist"]
}
